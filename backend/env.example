# Application Settings
APP_NAME=Course LMS
DEBUG=true
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/lms
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# S3/MinIO Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=lms-files
S3_REGION=auto
CDN_URL=http://localhost:9000

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Elasticsearch
# URL to the Elasticsearch cluster. In Docker, points to service name
ELASTICSEARCH_URL=http://localhost:9200
# Optional basic auth (leave empty if security disabled)
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
# Index name prefix for this app (helps isolate environments)
ELASTICSEARCH_INDEX_PREFIX=lms

# Monitoring
SENTRY_DSN=

# File Upload
MAX_UPLOAD_SIZE=2147483648  # 2GB in bytes
ALLOWED_VIDEO_FORMATS=["video/mp4", "video/webm"]
ALLOWED_IMAGE_FORMATS=["image/jpeg", "image/png", "image/webp"]
